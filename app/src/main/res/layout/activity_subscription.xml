<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorPrimary"
                android:elevation="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/drawerimage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="10dp"
                    android:background="@android:color/transparent"
                    android:elevation="8dp"
                    android:padding="5dp"
                    android:src="@drawable/arrowback" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="bold"

                    android:text="Subscription Plans"
                    android:textColor="#fff"
                    android:textSize="29sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/active_session_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/rounded_background"
                android:elevation="8dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="visible">




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/session_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Mini Subsciption Plan"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/active"
                        android:layout_width="50dp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/active"
                        android:padding="@dimen/_5sdp"
                        android:text="active"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/done"
                        android:layout_width="50dp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/active"
                        android:padding="@dimen/_5sdp"
                        android:text="active"
                        android:textColor="@color/white"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    >


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"
                        android:maxHeight="200sp"
                        android:src="@drawable/car_icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textviewWelcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:text="1500Rs / 1 week"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/textview_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="One time payment "
                            android:textSize="19dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fixed parking spot for the duration"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24/7 access to the parking area"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp"></TextView>

                        <!--                <TextView-->
                        <!--                    android:id="@+id/textview_address"-->
                        <!--                    android:layout_width="wrap_content"-->
                        <!--                    android:layout_height="wrap_content"-->
                        <!--                    android:layout_gravity="center_vertical"-->
                        <!--                    android:text="Address"-->
                        <!--                    android:textSize="@dimen/_16sdp" />-->
                    </LinearLayout>

                </LinearLayout>


                <Button
                    android:id="@+id/mini_plan_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/rounded_button"
                    android:text="Get the Premium Now"
                    android:backgroundTint="@color/colorPrimary"
                    android:textStyle="bold" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/rounded_background"
                android:elevation="8dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="visible">




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Gold Subsciption Plan"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/active"
                        android:padding="@dimen/_5sdp"
                        android:text="active"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/active"
                        android:padding="@dimen/_5sdp"
                        android:text="active"
                        android:textColor="@color/white"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    >


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"
                        android:maxHeight="200sp"
                        android:src="@drawable/car_icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:text="2500Rs / 1 month"
                            android:textSize="22dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:text="Monthly access with discounted rates "
                            />
                        <TextView
                            android:id="@+id/Parking_Area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fixed parking spot for the duration"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp"></TextView>

                        <TextView
                            android:id="@+id/ParkingArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24/7 access to the parking area"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp"></TextView>

                        <!--                <TextView-->
                        <!--                    android:id="@+id/textview_address"-->
                        <!--                    android:layout_width="wrap_content"-->
                        <!--                    android:layout_height="wrap_content"-->
                        <!--                    android:layout_gravity="center_vertical"-->
                        <!--                    android:text="Address"-->
                        <!--                    android:textSize="@dimen/_16sdp" />-->
                    </LinearLayout>

                </LinearLayout>





                <Button
                    android:id="@+id/goldplan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/rounded_button"
                    android:text="Get the Premium Now"
                    android:backgroundTint="@color/colorPrimary"
                    android:textStyle="bold" />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="@dimen/_25sdp"
                android:background="@drawable/rounded_background"
                android:elevation="8dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="visible">




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="Premium Subsciptions Plan"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/active"
                        android:padding="@dimen/_5sdp"
                        android:text="active"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30sp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@drawable/active"
                        android:padding="@dimen/_5sdp"
                        android:text="active"
                        android:textColor="@color/white"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    >


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="18dp"
                        android:layout_weight="1"
                        android:maxHeight="200sp"
                        android:src="@drawable/car_icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:text="5000Rs / 2 month"
                            android:textSize="22dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:text="Monthly access with discounted rates "
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fixed parking spot for the duration"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24/7 access to the parking area"
                            android:textColor="#000"
                            android:textSize="@dimen/_12sdp"></TextView>

                        <!--                <TextView-->
                        <!--                    android:id="@+id/textview_address"-->
                        <!--                    android:layout_width="wrap_content"-->
                        <!--                    android:layout_height="wrap_content"-->
                        <!--                    android:layout_gravity="center_vertical"-->
                        <!--                    android:text="Address"-->
                        <!--                    android:textSize="@dimen/_16sdp" />-->
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/premiumpack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/rounded_button"
                    android:text="Get the Premium Now"
                    android:backgroundTint="@color/colorPrimary"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>